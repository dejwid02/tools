@{
    ViewData["Title"] = "Home Page";
}
@model MovieViewModel

    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-sm-12">
                <img src="@Model.ImageUrl" style="width: 100%" alt="movie banner">
            </div>
            <div class="col-lg-8 col-sm-12 ">
                <h2>@Model.Title</h2>
                <p>@Model.Category @Model.Country - @Model.Year </p>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <p>@Model.Description</p>
            </div>
        </div>

    </div>
