@{
    ViewData["Title"] = "Home Page";
}
@model TvItemsViewModel
    <div class="container">
        <div class="card-deck">

            @foreach (var item in @Model.TvItems)
            {
                <div class="card h-100">
                    <img class="card-img-top" src=@item.Movie.ImageUrl alt="Card image cap">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Movie.Title</h5>
                        <p class="card-text mb-5">@item.Movie.Description.Substring(0, Math.Min(item.Movie.Description.Length, 300))</p>
                        <div class="container mt-auto">
                            <div class="row">
                                <select class="dropdown m-2" asp-items="@item.Emissions"></select>
                                <a href="#" class="btn btn-danger m-2"><i class="fas fa-record-vinyl"></i></a>

                            </div>
                        </div>
                        
                    </div>
                </div>

            }
        </div>
    </div>
