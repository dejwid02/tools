@{
    int id = 1;
}
@model IEnumerable<RecordingItemViewModel>
<div>

    @foreach (var item in @Model)
    {
        @await Component.InvokeAsync("Movie", item.Movie)
        <span class="pl-2 text-left" style="position:relative; top:-22px;">Recorded at: @item.RecordingTime.ToString("dd-MMM-yyy HH:mm")</span>
    }
</div>