@{ 
    int id = 1;
}
@model IEnumerable<RecordingItemViewModel>
    <form method="post">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Category</th>
                    <th scope="col">Country</th>
                    <th scope="col">Year</th>
                    <th scope="col">Recording time</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in @Model)
                {
                    <tr>
                        <th scope="row">@(id++)</th>
                        <td><a asp-action="Movie" asp-controller="Home" asp-route-id="@item.Movie.Id">@item.Movie.Title</a></td>
                        <td>@item.Movie.Category</td>
                        <td>@item.Movie.Country</td>
                        <td>@item.Movie.Year</td>
                        <td>@item.RecordingTime.ToShortDateString()</td>
                        <td><button class="btn btn-secondary" asp-controller="Recordings" asp-action="Delete" asp-route-id="@item.TvItemId"><i class="fas fa-trash"></i></button></td>
                    </tr>
                }

            </tbody>
        </table>
    </form>
