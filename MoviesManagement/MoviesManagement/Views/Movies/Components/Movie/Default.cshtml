@{
}
@model MovieViewModel
<div class="row">
    <div class="movie">
        <div class="card">
            
            <img class="card-img-top align-self-center m-3" src="@Model.ImageUrl" alt="Movie image" />
            <div class="card-body">
                <h4 class="card-title">@Model.Title</h4>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>
