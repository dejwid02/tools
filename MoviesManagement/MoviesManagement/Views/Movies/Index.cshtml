@model IList<MovieViewModel>
@if (Context.User.Identity.IsAuthenticated)
{
    <div class="container">
        @foreach (var item in @Model)
        {
            <div class="mb-3">


                @await Component.InvokeAsync("Movie", item)
            </div>
        }
    </div>
    <a class="btn btn-primary btn-circle btn-sm" asp-action="Create"><i class="fas fa-plus fa-3x"></i></a>
}