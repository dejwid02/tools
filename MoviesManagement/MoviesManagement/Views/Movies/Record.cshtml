@model  RecordMovieViewModel

<div>
    <form method="post" action="/">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" asp-for="MovieTitle" />
        </div>

        <div class="form-group">
            <label>Recorded at</label>
            <input type="date" class="form-control" asp-for="RecordedAt" />
        </div>

        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <button class="btn btn-primary" asp-controller="Movies" asp-action="SaveRecorded">Save</button>
        </div>
        
    </form>
</div>