@model EditMovieViewModel 
@{
}
    <form action="/" method="post">


        <div class="form-group">
            <label for="Title">Title</label>
            <input class="form-control" asp-for="Title"/>
        </div>

        <div class="form-row">
            <div class="form-group col-md-5">
                <label for="Category">Category</label>
                <select class="form-control" asp-for="Category" asp-items="service.GetCategories()"></select>
            </div>
            <div class="form-group col-md-3">
                <label for="Country">Country</label>
                <input class="form-control" asp-for="Country" />
            </div>

            <div class="form-group col-md-2">
                <label for="Year">Year</label>
                <select asp-for="Year" class="form-control" asp-items="service.GetYears()"> </select>
            </div>
            <div class="form-group col-md-2">
                <label for="Rating">Rating</label>
                <input class="form-control" asp-for="Rating" />
            </div>
        </div>
        <div class="form-group">
            <label for="description">Decription</label>
            <textarea rows="10" class="form-control"asp-for="Description"></textarea>
        </div>
        <div class="form-row">
            <button class="btn btn-secondary m-1">Cancel</button>
            <button class="btn btn-primary m-1" asp-controller="Movies" asp-action="SaveEdited">Save</button>
        </div>
        
        <input type="hidden" asp-for="Id" />
    </form>